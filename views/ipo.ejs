<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>IPO Listings</title>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Current and Upcoming IPOs</h1>

        <!-- Current IPOs Section -->
        <h2>Current IPOs</h2>
        <div class="row">
            <% currentIpOs.forEach(ipo => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="<%= ipo.logoUrl %>" class="card-img-top" alt="<%= ipo.companyName %> Logo">
                        <div class="card-body">
                            <h5 class="card-title"><%= ipo.companyName %></h5>
                            <p><strong>Type:</strong> <%= ipo.type %></p>
                            <p><strong>Closes On:</strong> <%= new Date(ipo.closingDate).toLocaleDateString() %></p>
                            <p><strong>Minimum Investment:</strong> <%= ipo.minimumInvestment %> / <%= ipo.shares %> shares</p>
                            <p><strong>Overall Subscription:</strong> <%= ipo.overallSubscription %>x</p>
                            <a href="<%= ipo.companyUrl %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Upcoming IPOs Section -->
        <h2>Upcoming IPOs</h2>
        <div class="row">
            <!-- Future IPO listings can be added here -->
            <!-- For example, you can use a different array or a flag in the IPO model to show upcoming IPOs -->
        </div>

        <!-- Admin Section -->
        <h2>Add New IPO</h2>
        <form action="/ipo/add" method="POST">
            <div class="form-group">
                <label for="companyName">Company Name</label>
                <input type="text" class="form-control" name="companyName" required>
            </div>
            <div class="form-group">
                <label for="logoUrl">Company Logo URL</label>
                <input type="text" class="form-control" name="logoUrl" required>
            </div>
            <div class="form-group">
                <label for="type">Type (SME/Mainstream)</label>
                <input type="text" class="form-control" name="type" required>
            </div>
            <div class="form-group">
                <label for="closingDate">Closing Date</label>
                <input type="date" class="form-control" name="closingDate" required>
            </div>
            <div class="form-group">
                <label for="minimumInvestment">Minimum Investment</label>
                <input type="text" class="form-control" name="minimumInvestment" required>
            </div>
            <div class="form-group">
                <label for="shares">Number of Shares</label>
                <input type="number" class="form-control" name="shares" required>
            </div>
            <div class="form-group">
                <label for="day">Day</label>
                <input type="number" class="form-control" name="day" required>
            </div>
            <div class="form-group">
                <label for="overallSubscription">Overall Subscription</label>
                <input type="text" class="form-control" name="overallSubscription" required>
            </div>
            <div class="form-group">
                <label for="companyUrl">Company URL</label>
                <input type="text" class="form-control" name="companyUrl" required>
            </div>
            <button type="submit" class="btn btn-success">Add IPO</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
